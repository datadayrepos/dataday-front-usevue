{
  "compilerOptions": {
    "target": "es2020",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "paths": {
      "@datadayrepos/usevuecore": ["./packages/core/index.ts"],
      "@datadayrepos/usevuecore/*": ["./packages/core/*"],
      "@datadayrepos/usevueshared": ["./packages/shared/index.ts"],
      "@datadayrepos/usevueshared/*": ["./packages/shared/*"]
    },
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationDir": "./types",
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts",
    "packages"
  ],
  "exclude": [
    "unocss.config.ts",
    "node_modules",
    "**/*.md",
    "**/dist",
    "packages/.test",
    "packages/_docs"
  ]
}
